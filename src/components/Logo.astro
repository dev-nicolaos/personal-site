---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"img"> {
	spin?: boolean;
}
const { alt = "", spin = false, ...rest } = Astro.props;
---

<style>
	@keyframes periodic-spin {
		12% {
			rotate: 360deg;
		}
		100% {
			rotate: 360deg;
		}
	}

	img {
		border-radius: var(--border-radius-small);
		display: inline-block;
		inline-size: 36px;
	}

	@media screen and (prefers-reduced-motion: no-preference) {
		.spin {
			animation-duration: 8s;
			animation-iteration-count: infinite;
			animation-name: periodic-spin;
		}
	}
</style>

<!-- TODO: rm picture and just use <img src=.../logo.svg> once Safari supports media queries in SVGs -->
<picture>
	<source media="(prefers-color-scheme: light)" srcset="/assets/icons/logo-light.svg" />
	<img
		{alt}
		class:list={{ spin }}
		height="1"
		src="/assets/icons/logo-dark.svg"
		width="1"
		{...rest}
	/>
</picture>
